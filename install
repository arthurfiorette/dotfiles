#!/usr/bin/env bash

# Update files
sudo apt update && sudo upgrade -y

# Install basic packages
sudo apt install -y wget curl nano git

# Clone
git clone --bare git@github.com:arthurfiorette/dotfiles.git $HOME/.dotfiles

# Sets up ZSH
sudo apt install -y zsh
sudo chsh -s $(which zsh) # default shell
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" #oh-my-zsh
git clone https://github.com/spaceship-prompt/spaceship-prompt.git "$ZSH_CUSTOM/themes/spaceship-prompt" --depth=1 # spaceship theme
ln -s "$ZSH_CUSTOM/themes/spaceship-prompt/spaceship.zsh-theme" "$ZSH_CUSTOM/themes/spaceship.zsh-theme" # spaceship theme
